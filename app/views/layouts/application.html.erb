              <% if session[:user_id] %>
                  <li><%= link_to 'Logout', logout_url %></li>
              <% else %>
                  <li><%= link_to 'Signup', signup_url,:class=>"signup" %></li>
                  <li><%= link_to 'Login', login_url,:class=>"login" %></li>
              <% end %>
            <!--<a href="" style="line-height: 6em;">Signup</a>-->
